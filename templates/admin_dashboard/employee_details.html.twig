{% extends 'base.html.twig' %}

{% block title %}Détails Employé - {{ employee.firstName }} {{ employee.lastName }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>
                        {{ employee.firstName }} {{ employee.lastName }}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Aujourd'hui</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ dailyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ dailyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ dailyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Cette Semaine</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ weeklyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ weeklyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ weeklyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Ce Mois</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ monthlyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ monthlyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ monthlyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons for Modals -->
                    <div class="mt-4">
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#weeklyStatsModal">
                            <i class="fas fa-chart-line me-2"></i>Statistiques Hebdomadaires (4 semaines)
                        </button>
                        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#monthlyStatsModal">
                            <i class="fas fa-calendar-alt me-2"></i>Statistiques Mensuelles
                        </button>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#packagesModal">
                            <i class="fas fa-list me-2"></i>Liste des Forfaits Exécutés
                        </button>
                    </div>

                    <!-- Weekly Stats Modal -->
                    <div class="modal fade" id="weeklyStatsModal" tabindex="-1" aria-labelledby="weeklyStatsModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="weeklyStatsModalLabel">Statistiques Hebdomadaires - 4 Dernières Semaines</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="table-responsive">
                                        <table class="table table-striped text-dark">
                                            <thead>
                                                <tr>
                                                    <th>Semaine</th>
                                                    <th>Chiffre d'Affaires HT</th>
                                                    <th>Nombre de Clients</th>
                                                    <th>Commissions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for weekStat in weeklyStatsLast4Weeks %}
                                                    <tr>
                                                        <td>{{ weekStat.week }}</td>
                                                        <td>{{ weekStat.stats.revenueHt|number_format(2, ',', ' ') }} €</td>
                                                        <td>{{ weekStat.stats.clients }}</td>
                                                        <td>{{ weekStat.stats.commission|number_format(2, ',', ' ') }} €</td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Monthly Stats Modal -->
                    <div class="modal fade" id="monthlyStatsModal" tabindex="-1" aria-labelledby="monthlyStatsModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="monthlyStatsModalLabel">Statistiques Mensuelles</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="card bg-light text-dark">
                                                <div class="card-body">
                                                    <h5 class="card-title">Ce Mois</h5>
                                                    <p class="card-text">
                                                        <strong>Chiffre d'Affaires HT:</strong> {{ monthlyStats.revenueHt|number_format(2, ',', ' ') }} €<br>
                                                        <strong>Nombre de Clients:</strong> {{ monthlyStats.clients }}<br>
                                                        <strong>Commissions:</strong> {{ monthlyStats.commission|number_format(2, ',', ' ') }} €
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Packages Modal -->
                    <div class="modal fade" id="packagesModal" tabindex="-1" aria-labelledby="packagesModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="packagesModalLabel">Liste des Forfaits Exécutés</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {% if allRevenues is empty %}
                                        <p class="text-muted">Aucun forfait exécuté pour cet employé.</p>
                                    {% else %}
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Date</th>
                                                        <th>Forfait</th>
                                                        <th>Prix HT</th>
                                                        <th>Prix TTC</th>
                                                        <th>Commission</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for revenue in allRevenues %}
                                                        <tr>
                                                            <td>{{ revenue.date|date('d/m/Y H:i') }}</td>
                                                            <td>{{ revenue.package ? revenue.package.name : 'N/A' }}</td>
                                                            <td>{{ revenue.amountHt|number_format(2, ',', ' ') }} €</td>
                                                            <td>{{ revenue.amountTtc|number_format(2, ',', ' ') }} €</td>
                                                            <td>{{ ((revenue.amountHt * employee.commissionPercentage) / 100)|number_format(2, ',', ' ') }} €</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Validation History -->
                    <div class="mt-4">
                        <h4>Historique des Validations de Commissions</h4>
                        {% if validatedCommissions is empty %}
                            <p class="text-muted">Aucune commission validée pour cet employé.</p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Semaine</th>
                                            <th>Revenus HT</th>
                                            <th>Commission</th>
                                            <th>Clients</th>
                                            <th>Validée le</th>
                                            <th>Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for commission in validatedCommissions %}
                                            <tr>
                                                <td>{{ commission.weekStart|date('d/m/Y') }} - {{ commission.weekEnd|date('d/m/Y') }}</td>
                                                <td>{{ commission.totalRevenueHt|number_format(2, ',', ' ') }} €</td>
                                                <td>{{ commission.totalCommission|number_format(2, ',', ' ') }} €</td>
                                                <td>{{ commission.clientsCount }}</td>
                                                <td>{{ commission.validatedAt|date('d/m/Y H:i') }}</td>
                                                <td>
                                                    {% if commission.isPaid() %}
                                                        <span class="badge bg-success">Payée</span>
                                                    {% else %}
                                                        <span class="badge bg-warning">En attente de paiement</span>
                                                        <br><br>
                                                        <button class="btn btn-primary btn-sm" onclick="markCommissionPaid({{ commission.id }})">
                                                            <i class="fas fa-money-bill-wave"></i> Confirmer le paiement
                                                        </button>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-4">
                        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function markCommissionPaid(commissionId) {
    if (confirm('Êtes-vous sûr de vouloir marquer cette commission comme payée ? Cette action confirme que le paiement a été effectué.')) {
        fetch('/employee/mark-commission-paid', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'commission_id=' + commissionId
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Commission marquée comme payée avec succès !');
                location.reload(); // Reload to update the status
            } else {
                alert('Erreur: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Une erreur est survenue lors de la confirmation du paiement.');
        });
    }
}
</script>
{% endblock %}
