{% extends 'base.html.twig' %}

{% block title %}Détails Employé - {{ employee.firstName }} {{ employee.lastName }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>
                        {{ employee.firstName }} {{ employee.lastName }}
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Aujourd'hui</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ dailyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ dailyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ dailyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Cette Semaine</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ weeklyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ weeklyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ weeklyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">Ce Mois</h5>
                                    <p class="card-text">
                                        <strong>Revenus:</strong> {{ monthlyStats.revenue|number_format(2, ',', ' ') }} €<br>
                                        <strong>Clients:</strong> {{ monthlyStats.clients }}<br>
                                        <strong>Commissions:</strong> {{ monthlyStats.commission|number_format(2, ',', ' ') }} €
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>





                    <!-- Packages Modal -->
                    <div class="modal fade" id="packagesModal" tabindex="-1" aria-labelledby="packagesModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="packagesModalLabel">Liste des Forfaits Exécutés</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {% if allRevenues is empty %}
                                        <p class="text-muted">Aucun forfait exécuté pour cet employé.</p>
                                    {% else %}
                                        <div class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Date</th>
                                                        <th>Forfait</th>
                                                        <th>Prix HT</th>
                                                        <th>Prix TTC</th>
                                                        <th>Commission</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% for revenue in allRevenues %}
                                                        <tr>
                                                            <td>{{ revenue.date|date('d/m/Y H:i') }}</td>
                                                            <td>{{ revenue.package ? revenue.package.name : 'N/A' }}</td>
                                                            <td>{{ revenue.amountHt|number_format(2, ',', ' ') }} €</td>
                                                            <td>{{ revenue.amountTtc|number_format(2, ',', ' ') }} €</td>
                                                            <td>{{ ((revenue.amountHt * employee.commissionPercentage) / 100)|number_format(2, ',', ' ') }} €</td>
                                                        </tr>
                                                    {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Validation History -->
                    <div class="mt-4">
                        <h4>Historique des Validations de Commissions</h4>
                        {% if validatedCommissions is empty %}
                            <p class="text-muted">Aucune commission validée pour cet employé.</p>
                        {% else %}
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Semaine</th>
                                            <th>Revenus HT</th>
                                            <th>Commission</th>
                                            <th>Clients</th>
                                            <th>Validée le</th>
                                            <th>Statut</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for commission in validatedCommissions %}
                                            <tr>
                                                <td>{{ commission.weekStart|date('d/m/Y') }} - {{ commission.weekEnd|date('d/m/Y') }}</td>
                                                <td>{{ commission.totalRevenueHt|number_format(2, ',', ' ') }} €</td>
                                                <td>{{ commission.totalCommission|number_format(2, ',', ' ') }} €</td>
                                                <td>{{ commission.clientsCount }}</td>
                                                <td>{{ commission.validatedAt|date('d/m/Y H:i') }}</td>
                                                <td>
                                                    {% if commission.isPaid() %}
                                                        <span class="badge bg-success">Payée</span>
                                                    {% elseif commission.validated %}
                                                        <span class="badge bg-info">Validée - En attente de paiement</span>
                                                        <br><br>
                                                        <button class="btn btn-primary btn-sm" onclick="markCommissionPaid({{ commission.id }})">
                                                            <i class="fas fa-money-bill-wave"></i> Confirmer le paiement
                                                        </button>
                                                    {% else %}
                                                        <span class="badge bg-secondary">En attente de validation</span>
                                                        <br><br>
                                                        <button class="btn btn-success btn-sm" onclick="validateCommission({{ commission.id }})">
                                                            <i class="fas fa-check"></i> Valider la commission
                                                        </button>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>

                    <div class="mt-4">
                        <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour au tableau de bord
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Toast notification system
function showToast(message, type = 'success') {
    const toastContainer = document.getElementById('toastContainer') || createToastContainer();

    const toast = document.createElement('div');
    toast.className = `toast align-items-center text-white bg-${type} border-0`;
    toast.setAttribute('role', 'alert');
    toast.setAttribute('aria-live', 'assertive');
    toast.setAttribute('aria-atomic', 'true');

    toast.innerHTML = `
        <div class="d-flex">
            <div class="toast-body">${message}</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
        </div>
    `;

    toastContainer.appendChild(toast);

    const bsToast = new bootstrap.Toast(toast);
    bsToast.show();

    // Remove toast after it's hidden
    toast.addEventListener('hidden.bs.toast', () => {
        toast.remove();
    });
}

function createToastContainer() {
    const container = document.createElement('div');
    container.id = 'toastContainer';
    container.className = 'toast-container position-fixed top-0 end-0 p-3';
    container.style.zIndex = '9999';
    document.body.appendChild(container);
    return container;
}

function validateCommission(commissionId) {
    if (confirm('Êtes-vous sûr de vouloir valider cette commission ? Cette action approuve la demande de l\'employé.')) {
        fetch('/admin/validate-commission', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'commission_id=' + commissionId
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast('Commission validée avec succès !', 'success');
                setTimeout(() => location.reload(), 1500); // Reload after showing toast
            } else {
                showToast('Erreur: ' + data.message, 'danger');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showToast('Une erreur est survenue lors de la validation.', 'danger');
        });
    }
}

function markCommissionPaid(commissionId) {
    if (confirm('Êtes-vous sûr de vouloir marquer cette commission comme payée ? Cette action confirme que le paiement a été effectué.')) {
        fetch('/admin/mark-commission-paid', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: 'commission_id=' + commissionId
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showToast('Commission marquée comme payée avec succès !', 'success');
                setTimeout(() => location.reload(), 1500); // Reload after showing toast
            } else {
                showToast('Erreur: ' + data.message, 'danger');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showToast('Une erreur est survenue lors de la confirmation du paiement.', 'danger');
        });
    }
}
</script>
{% endblock %}
