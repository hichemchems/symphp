{% extends 'base.html.twig' %}

{% block title %}Modifier l'Employé - Easy Gestion Barber{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">Modifier l'Employé</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.firstName) }}
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                                    {% if form_errors(form.firstName) %}
                                        <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.lastName) }}
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                                    {% if form_errors(form.lastName) %}
                                        <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.email) %}
                                <div class="text-danger">{{ form_errors(form.email) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.plainPassword, 'Nouveau mot de passe (laisser vide pour ne pas changer)') }}
                            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.plainPassword) %}
                                <div class="text-danger">{{ form_errors(form.plainPassword) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.commissionPercentage) }}
                            {{ form_widget(form.commissionPercentage, {'attr': {'class': 'form-control'}}) }}
                            {% if form_errors(form.commissionPercentage) %}
                                <div class="text-danger">{{ form_errors(form.commissionPercentage) }}</div>
                            {% endif %}
                        </div>
                        <div class="form-group mb-3">
                            <div class="form-check">
                                {{ form_widget(form.isVerified) }}
                                {{ form_label(form.isVerified, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">Modifier l'Employé</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
