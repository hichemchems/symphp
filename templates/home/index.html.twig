{% extends 'base.html.twig' %}

{% block title %}EasyGestionBarber - Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Bienvenue sur EasyGestionBarber</h1>
            <p class="lead mb-4">Votre solution complète de gestion pour salon de coiffure</p>

            <div class="row mt-5">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Connexion Employé</h5>
                            <p class="card-text">Accédez à votre tableau de bord personnel</p>
                            <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Connexion Administrateur</h5>
                            <p class="card-text">Gérez les employés, rendez-vous et finances</p>
                            <a href="{{ path('app_login') }}" class="btn btn-secondary">Connexion Admin</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h3>Fonctionnalités principales</h3>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <i class="fas fa-calendar-alt fa-3x text-primary mb-3"></i>
                        <h5>Gestion des RDV</h5>
                        <p>Planifiez et gérez vos rendez-vous facilement</p>
                    </div>
                    <div class="col-md-4">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5>Gestion des Employés</h5>
                        <p>Suivez les performances et commissions</p>
                    </div>
                    <div class="col-md-4">
                        <i class="fas fa-chart-line fa-3x text-info mb-3"></i>
                        <h5>Statistiques</h5>
                        <p>Analysez vos revenus et charges</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
